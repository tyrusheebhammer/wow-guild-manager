<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/announcement_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/announcement_description_edit_text"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:hint="@string/announcement_title_hint"
        android:inputType="textCapWords"
        />

    <EditText
        android:id="@+id/announcement_description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/announcement_title_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="24sp"
        android:hint="@string/announcement_description_hint"
        android:inputType="textCapSentences"
        />

</androidx.constraintlayout.widget.ConstraintLayout>